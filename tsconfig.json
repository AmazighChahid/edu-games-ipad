{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "@/theme": ["./src/theme/index"],
      "@/theme/*": ["./src/theme/*"],
      "@/types": ["./src/types/index"],
      "@/types/*": ["./src/types/*"],
      "@/store/*": ["./src/store/*"],
      "@/games/*": ["./src/games/*"],
      "@/i18n": ["./src/i18n/index"],
      "@/i18n/*": ["./src/i18n/*"],
      "@/components/*": ["./src/components/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
