{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/theme": ["./src/theme"],
      "@/types": ["./src/types"],
      "@/store": ["./src/store"],
      "@/hooks": ["./src/hooks"],
      "@/constants": ["./src/constants"],
      "@/i18n": ["./src/i18n"],
      "@/components/*": ["./src/components/*"],
      "@/games/*": ["./src/games/*"],
      "@/data/*": ["./src/data/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/assets/*": ["./assets/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
